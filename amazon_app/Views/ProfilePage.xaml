<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="amazon_app.Views.ProfilePage"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content >
        <StackLayout BackgroundColor="#c0f9ec">
            <StackLayout VerticalOptions="Start" HorizontalOptions="Start" Margin="20">
                <Image Source="splash_logo"/>
            </StackLayout>
            <StackLayout>
                <Image Source="bell.png"/>
                <Image Source="search.png"/>
            </StackLayout>
            <StackLayout Margin="30">
                <Label Text="Sign in for the best experience" FontSize="Large" TextColor="DarkSlateGray" VerticalOptions="Center" HorizontalOptions="Center">

                </Label>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>