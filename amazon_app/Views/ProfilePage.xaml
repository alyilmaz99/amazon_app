<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="amazon_app.Views.ProfilePage"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content >
        <StackLayout BackgroundColor="#c0f9ec">
            <StackLayout  Margin="20">
                <Grid >
                    <Image Source="splash_logo" VerticalOptions="Start" HorizontalOptions="Start" Grid.Column="0"/>
                    <Image Source="bell.png" VerticalOptions="Start" HorizontalOptions="Center" HeightRequest="30" Grid.Column="2"/>
                    <Image Source="search.png" VerticalOptions="Start" HorizontalOptions="End" HeightRequest="30" Grid.Column="2"/>
                </Grid>

            </StackLayout>
            <StackLayout Margin="10">
                <Label Text="Sign in for the best experience" FontSize="Large" TextColor="DarkSlateGray" VerticalOptions="Center" HorizontalOptions="Center">

                </Label>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>