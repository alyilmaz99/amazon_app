<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="amazon_app.MainPage"
             xmlns:vm="clr-namespace:amazon_app.ViewModels"
             xmlns:cm="clr-namespace:amazon_app.Views">


    <ContentPage.Content>
        <Frame Padding="0" Margin="20" BackgroundColor="#c0f9ec" HasShadow="True" BorderColor="Black" CornerRadius="10" HeightRequest="50" >
            <SearchBar x:Name="MainSearchBar"
                   SearchButtonPressed="MainSearchBar_SearchButtonPressed"
                   Placeholder="Seacrh Amazon"
                   BackgroundColor="White"
                   />
        </Frame>
    </ContentPage.Content>
</ContentPage>
