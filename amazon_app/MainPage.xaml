<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             android:TabbedPage.ToolbarPlacement="Bottom"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             xmlns:windows="clr-namespace:Xamarin.Forms.PlatformConfiguration.WindowsSpecific;assembly=Xamarin.Forms.Core"
             x:Class="amazon_app.MainPage"
             xmlns:vm="clr-namespace:amazon_app.ViewModels"
             xmlns:cm="clr-namespace:amazon_app.Views"
             windows:TabbedPage.HeaderIconsEnabled="true"
            >
    <windows:TabbedPage.HeaderIconsSize>
        <Size>
            <x:Arguments>
                <x:Double>100</x:Double>
                <x:Double>100</x:Double>
            </x:Arguments>
            
        </Size>
    </windows:TabbedPage.HeaderIconsSize>


        <ContentPage.Content>
        <StackLayout BackgroundColor="#c0f9ec" Margin="0">
            <Frame Padding="0" Margin="10" BackgroundColor="#c0f9ec" HasShadow="True" BorderColor="#88ced8" CornerRadius="10" HeightRequest="50" >
                <SearchBar x:Name="MainSearchBar"
                   SearchButtonPressed="MainSearchBar_SearchButtonPressed"
                   Placeholder="Seacrh Amazon"
                   BackgroundColor="Transparent"
                   />
            </Frame>
            <StackLayout 
                BackgroundColor="#c0f9ec"
                HeightRequest="50"
                Margin="0"
                >
                <Button
                    ImageSource="location.png"
                    Text="Deliver to Turkey"
                    VerticalOptions="Start"
                    BackgroundColor="#c0f9ec"
                    TextColor="Black"
                    TextTransform="None"
                    HorizontalOptions="Start"
                    Padding="10"
                    BorderColor="Transparent"
                    BorderWidth="0"
                    />
            </StackLayout>
            <ScrollView Padding="0" Margin="0">
                <CollectionView
                ItemsSource="{Binding Photo}"
                HeightRequest="250"
                HorizontalOptions="Fill"
                VerticalOptions="Start"
                HorizontalScrollBarVisibility="Never"
                ItemsLayout="HorizontalList">
                    <CollectionView.BindingContext>
                        <vm:MainPageSliderViewModels>
                        </vm:MainPageSliderViewModels>
                    </CollectionView.BindingContext>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid RowDefinitions="Auto"
                                  ColumnDefinitions="Auto">
                                <Image Source="{Binding ImageSource}" 
                                       Aspect="AspectFill"
                                       WidthRequest="440"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       HeightRequest="250"
                                       />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </ScrollView>
            <CarouselView ItemsSource="{Binding categories}" PeekAreaInsets="130" HeightRequest="170">
                <CarouselView.BindingContext>
                    <vm:CategoryViewModel>
                    </vm:CategoryViewModel>
                </CarouselView.BindingContext>
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Frame  HeightRequest="180"
                    WidthRequest="120"
                    HasShadow="True"
                    BackgroundColor="White"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    CornerRadius="5"
                    Margin="20"
                    Padding="0"
                >
                            <Grid >
                                <StackLayout VerticalOptions="EndAndExpand">
                                    <Image Source="{Binding ImageSource}" 
                           VerticalOptions="EndAndExpand"
                           Aspect="AspectFill"/>
                                </StackLayout>
                                <StackLayout VerticalOptions="StartAndExpand" >
                                    <Label Text="{Binding Name}" 
                               TextColor="Black" 
                               FontSize="15" 
                               FontAttributes="none"
                               Margin="15"
                               BackgroundColor="White"
                               VerticalOptions="Start"
                               HorizontalOptions="Center"
                               />
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
