<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:amazon_app.Views"
       xmlns:local="clr-namespace:amazon_app"
       xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
       x:Class="amazon_app.AppShell"
       NavigationPage.HasNavigationBar="false">

    <TabBar >
        <Tab Icon="home2.png" Shell.NavBarIsVisible="False" >
            <ShellContent>
                <views:HomePage/>
            </ShellContent>
        </Tab>
        <Tab Icon="profile.png" Shell.NavBarIsVisible="False" >
            <ShellContent>
                <views:ProfilePage/>
            </ShellContent>
        </Tab>
        <Tab Icon="cart3.png" Shell.NavBarIsVisible="False" >
            <ShellContent>
                <views:CartPage/>
            </ShellContent>
        </Tab>
        <Tab Icon="hamburger.png" Shell.NavBarIsVisible="False" >
            <ShellContent>
                <views:SettingsPage/>
            </ShellContent>
        </Tab>
    </TabBar>
</Shell>